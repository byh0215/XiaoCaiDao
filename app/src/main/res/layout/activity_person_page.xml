<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_person_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ruanjian.xin.xiaocaidao.ui.PersonPage">
    <RelativeLayout
        android:id="@+id/yi"
        android:background="@android:color/holo_orange_dark"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:background="@android:color/holo_orange_dark"
        android:layout_weight="0.42">
        <ruanjian.xin.xiaocaidao.domain.XCRoundImageView
            android:src="@drawable/person1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/personal_1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />
        <TextView
            android:id="@+id/personal_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="飞翔的六毛"
            android:layout_below="@+id/personal_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            tools:textColor="@android:color/white" />
        <TextView
            tools:textColor="@android:color/white"
            android:id="@+id/personal_1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginLeft="100dp"
            android:layout_below="@id/personal_1_2"/>
        <TextView
            tools:textColor="@android:color/white"
            android:id="@+id/personal_1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginLeft="250dp"
            android:layout_below="@id/personal_1_2"/>
        <TextView
            tools:textColor="@android:color/white"
            android:id="@+id/personal_1_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝"
            android:layout_marginLeft="95dp"
            android:layout_below="@+id/personal_1_3" />
        <TextView
            tools:textColor="@android:color/white"
            android:id="@+id/personal_1_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:layout_marginLeft="244dp"
            android:layout_below="@+id/personal_1_3" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/yi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light">
                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:src="@drawable/per1"/>
                <TextView
                    android:id="@+id/activity_tv1"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的关注"
                    android:layout_marginLeft="20dp"
                    tools:textColor="@android:color/background_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:src="@drawable/per2"/>
                <TextView
                    android:id="@+id/activity_tv2"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:layout_marginLeft="20dp"
                    tools:textColor="@android:color/background_dark" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:src="@drawable/per3"/>
                <TextView
                    android:id="@+id/activity_tv3"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的帖子"
                    android:layout_marginLeft="20dp"
                    tools:textColor="@android:color/background_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:src="@drawable/per4"/>

                <TextView
                    android:id="@+id/activity_tv4"
                    android:layout_marginTop="6dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:layout_marginLeft="20dp"
                    tools:textColor="@android:color/background_dark" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
